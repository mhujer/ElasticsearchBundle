{
	"name": "mhujer/elasticsearch-bundle",
	"type": "library",
	"description": "Integrates the elasticsearch/elasticsearch-php library into Symfony project. Provides Symfony Profiler panel with detailed information about the queries.",
	"keywords": [
		"elastic",
		"elasticsearch",
		"symfony",
		"symfony-bundle",
		"bundle",
		"profiler"
	],
	"homepage": "https://github.com/mhujer/ElasticsearchBundle",
	"license": "MIT",
	"authors": [
		{
			"name": "Martin Hujer",
			"email": "mhujer@gmail.com",
			"homepage": "https://www.martinhujer.cz"
		}
	],
	"require": {
		"php": "7.1.*||7.2.*",
		"elasticsearch/elasticsearch": "~5.3|~6.0",
		"symfony/symfony": "~3.3|~4.0"
	},
	"require-dev": {
		"consistence/coding-standard": "2.2.1",
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"matthiasnoback/symfony-dependency-injection-test": "2.2.0",
		"phpstan/phpstan-shim": "0.8.5",
		"phpunit/phpunit": "6.4.4",
		"satooshi/php-coveralls": "1.0.1"
	},
	"autoload": {
		"psr-4": {
			"Mhujer\\ElasticsearchBundle\\": [
				"src"
			]
		},
		"classmap": [
			"src"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Mhujer\\ElasticsearchBundle\\": [
				"tests"
			]
		}
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"build": [
			"@composer validate --no-check-all",
			"@phplint",
			"@phpcs",
			"@phpstan",
			"@phpunit"
		],
		"phplint": "parallel-lint src tests",
		"phpcs": "phpcs --standard=ruleset.xml src tests",
		"phpstan": "php vendor/phpstan/phpstan-shim/phpstan.phar analyse src tests --level 7 --no-progress",
		"phpunit": "phpunit"
	}
}
